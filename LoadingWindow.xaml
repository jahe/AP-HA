<Window x:Class="AP_HA.LoadingWindow"
        x:Name="this"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoadingWindow" Height="129" Width="372" WindowStyle="None"
        Background="#45597C" WindowStartupLocation="CenterScreen" Topmost="True" ShowInTaskbar="False" ResizeMode="NoResize" WindowState="Normal">
    
    <Grid Height="99">
        <Grid.DataContext>
            <Binding ElementName="this" />
        </Grid.DataContext>
        <ProgressBar Height="10" HorizontalAlignment="Left" Margin="12,69,0,0" Name="progressBar" VerticalAlignment="Top" Width="326" Minimum="0" Value="{Binding ProgressbarValue}" Maximum="100" FontSize="345" IsIndeterminate="True">
            <ProgressBar.DataContext>
                <Binding ElementName="this" />
            </ProgressBar.DataContext>
        </ProgressBar>
        <Label Content="Bitte warten..." Height="18" HorizontalAlignment="Left" Margin="12,44,0,0" Name="label1" VerticalAlignment="Top" Foreground="White" Width="82" Padding="0" />
        <Label Content="TEXT" Foreground="White" Height="25" HorizontalAlignment="Left" Margin="10,12,0,0" Name="loadingText" VerticalAlignment="Top" Width="328" FontSize="18" FontWeight="Bold" Padding="0" />
    </Grid>
</Window>
