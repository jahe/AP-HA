<Window x:Class="AP_HA.CreateProjectDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neues Projekt erstellen" Height="268" Width="492" Background="#FF293955" Focusable="False" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        
        <Border DockPanel.Dock="Top" BorderThickness="1,1,1,0" BorderBrush="#999" CornerRadius="3" Margin="5">
            <DockPanel LastChildFill="True">
                <StatusBar DockPanel.Dock="Bottom">
                    <ProgressBar Height="10" Name="progressBar1" Width="100" />
                </StatusBar>
                <StackPanel DockPanel.Dock="Left" Orientation="Vertical">
                    <StackPanel Orientation="Vertical">
                        <Label Foreground="White" Background="#FF45597C" Height="22" Padding="3">Bitte Stapel auswählen</Label>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="150" Margin="3"></TextBox>
                            <Button Content="...." Height="23" Margin="3" Name="cPDBtnOpenStack" Width="32" Click="openStack" />
                        </StackPanel>
                    </StackPanel>
                    <Separator />
                    <StackPanel Orientation="Vertical">
                        <Label Foreground="White" Background="#FF45597C" Height="22" Padding="3">Bitte einen Namen angeben:</Label>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Width="150" Margin="3" Height="23"></TextBox>
                        </StackPanel>
                    </StackPanel>
                    <Separator />
                    <StackPanel Orientation="Vertical">
                        <Label Foreground="White" Background="#FF45597C" Height="22" Padding="3" Content="Bitte Zielverzeichnis auswählen"></Label>
                        <StackPanel Orientation="Horizontal">
                            <TextBox Margin="3" Width="150"></TextBox>
                            <Button Content="...." Margin="3" Height="23" Name="cPDBtnChooseSaveFolder" Width="32" Click="chooseSaveFolder" />
                        </StackPanel>
                    </StackPanel>
                    <Separator />
                    <Button Content="OK" IsDefault="True" Height="23" Name="cPDBtnOK" Width="75" Click="cPDBtnOK_Click" />
                </StackPanel>               
            </DockPanel>
        </Border>
            
        
