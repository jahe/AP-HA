        private void OnPropertyChanged(string propertyName)
        {
            var handler = PropertyChanged;  // PropertyChanged direkt abfragen führt zu Speicherproblemen!

            if (handler != null)
            {
                PropertyChanged(this, new PropertyChangedEventArgs(propertyName));
            }
        }

